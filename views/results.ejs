<%- include("partials/header") %>



<div class="container">
		
	<div class="row d-flex justify-content-center">
		<div class= "col-md-10 mb-5 mt-0">
			<h2 class="text-center mb-3">
			Search For Any Movie
			</h2>
			<form action="/results" method="GET">
				<div class="active-cyan-4 mb-4">
  					<input class="form-control" name="movie" type="text" placeholder="Search Movies.." aria-label="Search">
				</div>
			</form>
			
		</div>

			<%var arr = data["Search"];%>
			
			<div class="row pt-5 ">
				<%for(var i=0;i<11;i++){%>
						
				
					<%if(arr != undefined && arr[i] ){%>
								
								
						<div class = "col-md-3">
							<div class="card movies-list" >
								<%if(arr[i].Poster == 'N/A'){ %>
									<%console.log(arr[i].Poster)%>
									<%arr[i].Poster = 'https://i.ibb.co/FssVCNp/download.png'%>
									
								<%}%>
								<img class="card-img-top" src="<%=arr[i].Poster%>" alt="Card image cap">
								
								
								<div class="card-body movies-list-content">
								<h5 class="card-title"> <%= arr[i].Title %></h5>
								<p class="card-text"></p>
								<form action = "/results/<%=arr[i].imdbID%>" method ="GET">
									<div class = "form-group">
										<button class="btn btn-info btn-sm">More Details</button>
									</div>
								</form>
									
								</div>
							</div>
							
						</div>
					<%}%>	
				
			
				<% }%>
			</div>
			
				
	</div>
</div>
	
